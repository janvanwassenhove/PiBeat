{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pibeat",
  "version": "0.1.0",
  "identifier": "com.pibeat.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PiBeat - Live Coding Music",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "sc-bundle/**/*": "sc-bundle/"
    }
  }
}
